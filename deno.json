{
    "imports": {
        "clients/": "https://raw.githubusercontent.com/kinsondigital/Infrastructure/v12.1.0/cicd/clients/"
    },
    "lint": {
        "include": [
            "scripts/.*\\.ts$"
        ],
        "exclude": [
            "**/playground.ts"
        ]
    },
    "fmt": {
        "include": [
            "**/**/scripts/"
        ],
        "exclude": [
            "**/*.md",
            "**/*.json"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    }
}
